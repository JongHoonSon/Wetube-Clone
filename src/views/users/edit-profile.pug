extends ../base

block content
    if errorMessage 
        span=errorMessage
    
    if(isHeroku)
        img(src=loggedInUser.avatarUrl, width="100", height="100", crossorigin)
    else
        img(src='/' + loggedInUser.avatarUrl, width="100", height="100", crossorigin)
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Email", value=loggedInUser.email, name="email", type="text", required)
        input(placeholder="Username", value=loggedInUser.username, name="username", type="text", required)
        input(placeholder="Name", value=loggedInUser.name, name="name", type="text", required)
        input(placeholder="Location", value=loggedInUser.location, name="location", type="text", required)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr; 