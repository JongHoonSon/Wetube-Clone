extends ../base

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        label(for="username") Username
        input(placeholder="Username", id="username", name="username", type="text", required)
        label(for="Password") password
        input(placeholder="Password", id="password", name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Continue with Github &rarr;
        include ../partials/social-login
    div.auth-switch
        span Don't have a account? 
        a(href="/join") Create one now &rarr;

    hr