extends ../base.pug

block content
    h4 Update video
    form(method="POST")
        label(for="title") Title
        input(placeholder="Title", required, maxLength=80, type="text", value=video.title, id="title" name="title")
        label(for="description") Description
        input(placeholder="Description", required, minLength=20, type="text", value=video.description, id="description" name="description")
        label(for="hashtags") Hashtags
        input(placeholder="Hashtags, separated by comma", required, type="text", value=video.hashtags.join(), id="hashtags" name="hashtags")
        input(value="Save", type="submit")