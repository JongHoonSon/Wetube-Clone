extends base

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="text", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=cc5dc9d57c3716aa44b0&scope=") Continue with Github

    hr
    div 
        span Don't have a account? 
        a(href="/join") Create one now &rarr;